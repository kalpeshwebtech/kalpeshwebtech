<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/black_gray"
            android:text="@string/welcome_flipcart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp">
            <EditText
                android:id="@+id/edtEmail"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:background="@drawable/search_background_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtPass"
                android:hint="Password"
                android:layout_marginTop="@dimen/_10sdp"
                android:inputType="textPassword"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:background="@drawable/search_background_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="5dp"
                card_view:cardCornerRadius="@dimen/_25sdp"
                card_view:cardElevation="@dimen/_1sdp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:id="@+id/btnLogin"
                    android:text="Login"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:background="@color/blue"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tvForgot"
                android:text="Forgot Password?"
                android:gravity="end"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
<TextView
    android:text="OR With"
    android:gravity="center"
    android:layout_marginTop="@dimen/_10sdp"
    android:textColor="@color/blue"
    android:textStyle="normal"
    android:textSize="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardGLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="5dp"
                card_view:cardCornerRadius="@dimen/_25sdp"
                card_view:cardElevation="@dimen/_1sdp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp">
                    <ImageView
                        android:tint="@color/white"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/ic_google"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        tools:ignore="UseAppTint" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Login with Google"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardFBLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="5dp"
                card_view:cardCornerRadius="@dimen/_25sdp"
                card_view:cardElevation="@dimen/_1sdp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/blue"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp">
                    <ImageView
                        android:tint="@color/white"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/ic_fb"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        tools:ignore="UseAppTint" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Login with Facebook"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/lySignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:text="You have new user? "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:text="Sign Up"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</FrameLayout>